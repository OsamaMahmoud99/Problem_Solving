#include <bits/stdc++.h>

using namespace std;

int main()
{
	int M , N;
	cin >> M >> N;

	if(M != N)
		cout<<((M*N)-(M+N))*2;
	else if(M == N)
	{
		if(M % 2 == 0)
			cout << (M*N)-(M+N);
		else
			cout << ((M*N)-(M+N))+1;
	}


	return 0;
}




